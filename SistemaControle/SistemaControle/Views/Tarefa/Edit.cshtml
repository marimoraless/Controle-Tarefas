@model Tarefa

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center mb-4">EDITAR TAREFA</h2>

    <form asp-action="Edit" method="post" class="mt-3">
        <input type="hidden" asp-for="TarefaId" />

        <div class="form-group row">
            <label for="nomeTarefa" class="col-sm-2 col-form-label">Nome da Tarefa:</label>
            <div class="col-sm-10">
                <input asp-for="NomeTarefa" id="nomeTarefa" class="form-control" />
                <span asp-validation-for="NomeTarefa" class="text-danger"></span>
            </div>
        </div>
        <br>
         
        <div class="form-group row">
            <label for="dataConclusao" class="col-sm-2 col-form-label">Data de Conclusão:</label>
            <div class="col-sm-10">
                <input asp-for="DataConclusao" id="dataConclusao" type="date" class="form-control" value="@DateTimeOffset.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="DataConclusao" class="text-danger"></span>
            </div>
        </div>
       
        <br>
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Salvar</button>
                <a asp-action="TarefaAFazer" class="btn btn-secondary">Voltar</a>
            </div>
        </div>
    </form>
</div>