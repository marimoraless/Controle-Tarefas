@model List<Tarefa>

<h2>Tarefas Por Fazer</h2>


{
    <table class="table">
        <thead>
            <tr>
                <th>Nome da Tarefa</th>
                <th>Data de Início</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tarefa in Model)
            {
                <tr>
                    <td>@tarefa.NomeTarefa</td>
                    <td>@tarefa.DataInicio.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="Detail" asp-route-id="@tarefa.TarefaId">Detalhes</a> |
                        <a asp-action="Edit" asp-route-id="@tarefa.TarefaId">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@tarefa.TarefaId">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
